import model.Deck;
import model.Flashcard;
import java.util.Scanner;

public class FlashcardApp {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Deck deck = new Deck();

        System.out.println("Welcome to Custom Flashcard Tool!");

        while (true) {
            System.out.println("\n1. Add Flashcard\n2. Review Flashcards\n3. Exit");
            System.out.print("Choose an option: ");
            int choice = scanner.nextInt();
            scanner.nextLine(); 

            if (choice == 1) {
                System.out.print("Enter question: ");
                String question = scanner.nextLine();
                System.out.print("Enter answer: ");
                String answer = scanner.nextLine();
                deck.addCard(new Flashcard(question, answer));
                System.out.println("Flashcard added!");
            } else if (choice == 2) {
                for (Flashcard card : deck.getCards()) {
                    System.out.println("Question: " + card.getQuestion());
                    System.out.println("[Press Enter to see the answer]");
                    scanner.nextLine();
                    System.out.println("Answer: " + card.getAnswer());
                }
            } else if (choice == 3) {
                System.out.println("Goodbye!");
                break;
            }
        }

        scanner.close();
    }
}
